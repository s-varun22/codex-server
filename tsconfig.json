{
	"compilerOptions": {
		"target": "es2024",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitAny": true,
	},
	"include": ["src"]
}